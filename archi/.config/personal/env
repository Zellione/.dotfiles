#!/usr/bin/env zsh

export STOW_FOLDERS="bin,nvim,tmux,archi,personal,zsh"

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

