#!/usr/bin/env zsh

export STOW_FOLDERS="bin,nvim,tmux,uwuntu,personal,i3,zsh"

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

change_background() {
    dconf write /org/mate/desktop/background/picture-filename "'$HOME/anime/$(ls ~/dotfiles/backgrounds | fzf)'"
}
